&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl"> &lt;span class="bp">self&lt;/span>&lt;span class="o">.&lt;/span>&lt;span class="n">network_functions&lt;/span> &lt;span class="o">=&lt;/span> &lt;span class="p">{&lt;/span>
