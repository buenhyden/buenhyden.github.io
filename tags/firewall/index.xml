&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl"> &lt;span class="bp">self&lt;/span>&lt;span class="o">.&lt;/span>&lt;span class="n">src_ip&lt;/span>&lt;span class="o">.&lt;/span>&lt;span class="n">matches&lt;/span>&lt;span class="p">(&lt;/span>&lt;span class="n">packet&lt;/span>&lt;span class="o">.&lt;/span>&lt;span class="n">src_ip&lt;/span>&lt;span class="p">)&lt;/span> &lt;span class="ow">and&lt;/span>
&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl"> &lt;span class="bp">self&lt;/span>&lt;span class="o">.&lt;/span>&lt;span class="n">dst_ip&lt;/span>&lt;span class="o">.&lt;/span>&lt;span class="n">matches&lt;/span>&lt;span class="p">(&lt;/span>&lt;span class="n">packet&lt;/span>&lt;span class="o">.&lt;/span>&lt;span class="n">dst_ip&lt;/span>&lt;span class="p">)&lt;/span> &lt;span class="ow">and&lt;/span>
