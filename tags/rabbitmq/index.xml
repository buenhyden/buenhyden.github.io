&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl"> &lt;span class="n">exchange_type&lt;/span>&lt;span class="o">=&lt;/span>&lt;span class="s1">&amp;#39;direct&amp;#39;&lt;/span>
